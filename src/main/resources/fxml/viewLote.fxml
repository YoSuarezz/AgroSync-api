<AnchorPane style="-fx-background-color: white;" stylesheets="@../styles/LoteRegisterStyles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sedikev.infrastructure.rest.controller.lote.ViewLoteController">
   <children>
      <StackPane prefHeight="598.0" prefWidth="244.0" styleClass="panel" />
      <Label layoutX="36.0" layoutY="41.0" prefHeight="149.0" prefWidth="216.0" stylesheets="@../styles/LoteRegisterStyles.css" text="Elige una opcion" textFill="WHITE" wrapText="true">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Accordion layoutX="36.0" layoutY="210.0" prefHeight="270.0" prefWidth="182.0" stylesheets="@../styles/styles.css">
         <panes>
            <TitledPane animated="false" maxHeight="35.0" minHeight="35.0" prefHeight="120.0" prefWidth="182.0" text="Lotes" textFill="WHITE">
               <content>
                  <AnchorPane maxWidth="-Infinity" minHeight="0.0" minWidth="0.0" prefHeight="57.0" prefWidth="130.0">
                     <children>
                        <Button fx:id="id_registerLote" layoutX="25.0" layoutY="5.0" mnemonicParsing="false" onAction="#goRegisterLote" prefHeight="30.0" prefWidth="119.0" style="-fx-background-color: transparent;" text="Registrar Lote" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="id_viewLote" layoutX="25.0" layoutY="30.0" mnemonicParsing="false" onAction="#goViewLote" style="-fx-background-color: transparent;" text="Ver Lotes" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
               </content>
               <font>
                  <Font size="24.0" />
               </font>
            </TitledPane>
            <TitledPane animated="false" text="Ventas" textFill="WHITE">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="id_registerSale" layoutX="25.0" layoutY="5.0" mnemonicParsing="false" onAction="#goRegisterSale" text="Registrar Venta" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="id_viewSale" layoutX="25.0" layoutY="30.0" mnemonicParsing="false" onAction="#goViewSale" text="Ver Ventas" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
               </content>
               <font>
                  <Font size="24.0" />
               </font>
            </TitledPane>
            <TitledPane animated="false" text="Usuarios" textFill="WHITE">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="id_registerUser" layoutX="25.0" layoutY="5.0" mnemonicParsing="false" onAction="#goRegisterUser" text="Registrar Usuarios" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="id_viewUser" layoutX="25.0" layoutY="30.0" mnemonicParsing="false" onAction="#goViewUser" text="Ver Usuarios" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
               </content>
               <font>
                  <Font size="24.0" />
               </font>
            </TitledPane>
            <TitledPane animated="false" text="Cartera" textFill="WHITE">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="id_viewClient" layoutX="25.0" layoutY="5.0" mnemonicParsing="false" onAction="#goViewClient" text="Clientes" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="id_viewSupplier" layoutX="25.0" layoutY="30.0" mnemonicParsing="false" onAction="#goViewSupplier" text="Proveedores" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
               </content>
               <font>
                  <Font size="24.0" />
               </font>
            </TitledPane>
         </panes>
      </Accordion>
      <Label alignment="CENTER" layoutX="244.0" layoutY="10.0" prefHeight="62.0" prefWidth="550.0" text="Ver Lote" textAlignment="CENTER" textFill="#27ae60" wrapText="true">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label layoutX="284.0" layoutY="81.0" prefHeight="17.0" prefWidth="101.0" text="Buscar por:" />
      <Label layoutX="457.0" layoutY="69.0" prefHeight="17.0" prefWidth="101.0" text="Contramarca" />
      <TextField fx:id="contramarcaField" layoutX="456.0" layoutY="88.0" prefHeight="26.0" prefWidth="95.0" promptText="Ejemplo: 205" />
      <Label layoutX="606.0" layoutY="69.0" prefHeight="17.0" prefWidth="101.0" text="Semana" />
      <TextField fx:id="semanaField" layoutX="606.0" layoutY="87.0" prefHeight="26.0" prefWidth="101.0" promptText="Ejemplo: 17" />
      <Label layoutX="608.0" layoutY="121.0" prefHeight="17.0" prefWidth="101.0" text="Año" />
      <TextField fx:id="añoField" layoutX="608.0" layoutY="139.0" prefHeight="26.0" prefWidth="101.0" promptText="Ejemplo: 2025" />
      <Label layoutX="459.0" layoutY="120.0" prefHeight="17.0" prefWidth="101.0" text="Fecha" />
      <DatePicker fx:id="fechaField" layoutX="458.0" layoutY="141.0" prefHeight="26.0" prefWidth="110.0" />
      <Label layoutX="284.0" layoutY="119.0" prefHeight="17.0" prefWidth="101.0" text="Proveedor" />
      <ComboBox fx:id="comboProveedor" layoutX="285.0" layoutY="141.0" prefHeight="26.0" prefWidth="134.0">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="Ninguno" />
            </FXCollections>
         </items>
      </ComboBox>


      <!-- Botón de búsqueda, al principio visible -->
      <Button fx:id="id_searchLote" layoutX="500.0" layoutY="180.0" mnemonicParsing="false" onAction="#searchLotes" style="-fx-background-color: #27ae60;" text="Buscar" textFill="WHITE" visible="true" />

      <!-- Botón Regresar, al principio oculto -->
      <Button fx:id="id_regresarLote" layoutX="500.0" layoutY="180.0" mnemonicParsing="false" onAction="#regresarAViewLotes" style="-fx-background-color: #27ae60;" text="Regresar" textFill="WHITE" visible="false" />

      <!-- Tabla para mostrar los animales del lote, inicialmente invisible -->
      <TableView fx:id="animalesTableView" layoutX="290.0" layoutY="215.0" prefHeight="324.0" prefWidth="473.0" visible="false">
         <columns>
            <TableColumn fx:id="animalPosColumn" prefWidth="80.0" text="Posición" />
            <TableColumn fx:id="contramarcaAnimalColumn" prefWidth="100.0" text="Contramarca" />
            <TableColumn fx:id="semanaColumn" prefWidth="80.0" text="Semana" />
            <TableColumn fx:id="pesoColumn" prefWidth="90.0" text="Peso" />
            <TableColumn fx:id="sexoColumn" prefWidth="90.0" text="Sexo" />
         </columns>
      </TableView>

      <!-- Fijos: Proveedor, Precio por Kilo, Kilaje Total y Precio Total -->
      <Label fx:id="proveedorLabel" layoutX="290.0" layoutY="550.0" text="Proveedor: " visible="false" />
      <Label fx:id="kilajeTotalLabel" layoutX="500.0" layoutY="550.0" text="Kilaje Total: " visible="false" />
      <Label fx:id="precioTotalLabel" layoutX="500.0" layoutY="570.0" text="Precio Total: " visible="false" />


      <!-- Tabla de Lotes -->
      <TableView fx:id="loteTableView" layoutX="285.0" layoutY="215.0" onMouseClicked="#onLoteClicked" prefHeight="324.0" prefWidth="490.0">
         <columns>
            <TableColumn fx:id="proveedorColumn" prefWidth="135.0" text="Proveedor" />
            <TableColumn fx:id="contramarcaColumn" minWidth="5.0" prefWidth="80.0" text="Contramarca" />
            <TableColumn fx:id="semanaLoteColumn" minWidth="0.0" prefWidth="90.0" text="Semana" />
            <TableColumn fx:id="fechaColumn" minWidth="0.0" prefWidth="95.0" text="Fecha" />
            <TableColumn fx:id="actualizarColumn" prefWidth="72.0" text="Actualizar" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
