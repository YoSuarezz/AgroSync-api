            <TableColumn fx:id="nombreColumn" prefWidth="160.0" text="Nombre" />
            <TableColumn fx:id="tipoColumn" minWidth="0.0" prefWidth="84.0" text="Tipo" />
            <TableColumn fx:id="telefonoColumn" text="Teléfono" />
            <TableColumn fx:id="editarColumn" prefWidth="57.0" text="Editar" />
