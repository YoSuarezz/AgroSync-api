      <Label layoutX="36.0" layoutY="41.0" prefHeight="149.0" prefWidth="216.0" text="Elige una opcion" textFill="WHITE" wrapText="true">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Accordion layoutX="36.0" layoutY="210.0" prefHeight="269.0" prefWidth="163.0" stylesheets="@../styles/styles.css">
         <panes>
            <TitledPane animated="false" maxHeight="35.0" minHeight="35.0" prefHeight="35.0" prefWidth="132.0" text="Lotes" textFill="WHITE">
               <content>
                  <AnchorPane maxWidth="-Infinity" minHeight="0.0" minWidth="0.0" prefHeight="57.0" prefWidth="130.0">
                     <children>
                        <Button fx:id="id_registerLote1" layoutX="17.0" layoutY="5.0" mnemonicParsing="false" onAction="#goRegisterLote" prefHeight="30.0" prefWidth="112.0" style="-fx-background-color: transparent;" text="Registrar Lote" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="id_viewLote1" layoutX="19.0" layoutY="30.0" mnemonicParsing="false" onAction="#goViewLote" style="-fx-background-color: transparent;" text="Ver Lotes" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
               </content>
               <font>
                  <Font size="24.0" />
               </font>
            </TitledPane>
            <TitledPane animated="false" text="Ventas" textFill="WHITE">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="id_registerSale1" layoutX="25.0" layoutY="5.0" mnemonicParsing="false" onAction="#goRegisterSale" text="Registrar Venta" textFill="WHITE">
