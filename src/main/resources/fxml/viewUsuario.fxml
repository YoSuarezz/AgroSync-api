                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="id_registerUser1" layoutX="25.0" layoutY="5.0" mnemonicParsing="false" onAction="#goRegisterUser" text="Registrar Usuarios" textFill="WHITE">
