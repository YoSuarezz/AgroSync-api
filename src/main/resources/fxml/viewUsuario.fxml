                        <Button fx:id="id_viewSupplier1" layoutX="25.0" layoutY="30.0" mnemonicParsing="false" onAction="#goViewSupplier" text="Proveedores" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
               </content>
               <font>
                  <Font size="24.0" />
               </font>
            </TitledPane>
         </panes>
      </Accordion>

      <!-- Contenido Principal -->
      <Label alignment="CENTER" layoutX="244.0" layoutY="10.0" prefHeight="62.0" prefWidth="550.0" text="Ver Usuario" textAlignment="CENTER" textFill="#27ae60" wrapText="true">
