      <Label layoutX="284.0" layoutY="119.0" text="Nombre" />
      <TextField fx:id="nombreField" layoutX="284.0" layoutY="139.0" promptText="Ejemplo: Augusto" />

      <Label layoutX="460.0" layoutY="119.0" text="Teléfono" />
      <TextField fx:id="telefonoField" layoutX="460.0" layoutY="139.0" promptText="Ejemplo: 3123456789" />

      <Label layoutX="636.0" layoutY="119.0" text="Tipo" />
      <ChoiceBox fx:id="tipoChoiceBox" layoutX="636.0" layoutY="139.0" prefHeight="27.0" prefWidth="76.0" style="-fx-background-color: transparent; -fx-border-color: transparent transparent #a0a0a0 transparent;" />

      <Button fx:id="buscarButton" layoutX="720.0" layoutY="140.0" onAction="#buscarUsuarios" style="-fx-background-color: #27ae60;" text="Buscar" textFill="WHITE" />

